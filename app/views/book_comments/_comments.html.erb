<table class="table">
  <tbody>
    <% book.book_comments.each do |comment| %>
      <tr>
        <td>
          <%= link_to user_path(comment.user.id) do %>
           <%= attachment_image_tag comment.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: 'no_image.jpg' %><br />
           <%= comment.user.name %>
          <% end %>
        </td>
        <td>
           <%= comment.comment %>
        </td>
        <td>
          <% if comment.user.id == current_user.id %>
            <%= link_to "Destroy", book_book_comment_path(comment.book_id,comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>